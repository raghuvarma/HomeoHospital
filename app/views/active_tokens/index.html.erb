<h1>Patients List</h1>
<% if can? :create, Token %>
  <div class="create-form-link">
    <%= link_to 'New Token', new_token_path %>
  </div>
<% end %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Token Id</th>
      <th>Patient Name</th>
      <th>Patient Relation Name</th>
      <th>Application Id</th>
      <th>Assigned Doctor</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @activeTokens.each do |token| %>
      <tr>
        <td><%= token.id %></td>
        <td><%= token.name %></td>
        <td><%= token.relation_name %></td>
        <td><%= link_to token.application_id, application_path(token.application_id) %></td>
        <td><%= token.doctor %></td>
        <td><%= link_to 'Show', token %></td>
        <td>
          <% if can? :update, Token %>
            <%= link_to 'Edit', edit_token_path(token) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, Token %>
            <%= link_to 'Destroy', token, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
