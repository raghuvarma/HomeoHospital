<h1>Active Tokens</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Relation Name</th>
      <th>Application Id</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @activeTokens.each do |token| %>
      <tr>
        <td><%= token.id %></td>
        <td><%= token.name %></td>
        <td><%= token.relation_name %></td>
        <td><%= link_to token.application_id, application_path(token.application_id) %></td>
        <td><%= link_to 'Show', token %></td>
        <td>
          <% if can? :update, Token %>
            <%= link_to 'Edit', edit_token_path(token) %></td>
          <% end %>
        <td>
          <% if can? :destroy, Token %>
            <%= link_to 'Destroy', token, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>  
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Token %>
<%= link_to 'New Token', new_token_path %>
<% end %>